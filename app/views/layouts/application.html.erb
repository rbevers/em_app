<!DOCTYPE html>
<html>
<head>
  <title>EM App</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if notice.present? %>
    <div id="em-notice" class="alert alert-info"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div id="em-alert" class="alert alert-danger"><%= alert %></div>
  <% end %>

  <div id="em-content">
<%= yield %>
  </div>
</body>
</html>
